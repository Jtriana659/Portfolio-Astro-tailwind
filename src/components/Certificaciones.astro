<div class="grid grid-cols-1 md:grid-cols-2 gap-8  mb-20">
  <!-- COLUMNA Izquierda  – CERTIFICACIONES -->
  <div>
    <h2 class="text-1xl font-bold text-white mb-4">Certificaciones</h2>

    <div class=" flex flex-col gap-4">
      {
        CERTIFIACIONES.map(({ title, description }, index) => (
          <div
            class={`
              flex items-center p-4 rounded-lg cursor-pointer
              border border-gray-200 bg-white/90 shadow-sm transition-all duration-200
              ${HOVER_BG} ${HOVER_BORDER}
              ${index === 0 ? "border-red-600 bg-red-50" : ""}
            `}
          >
            <div class={`flex items-center justify-center mr-4 ${PIN_COLOR}`}>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-5 h-5"
              >
                <circle cx="12" cy="8" r="7" />
                <polyline points="8.21 13.89 7 23 12 18 17 23 15.79 13.88" />
              </svg>
            </div>

            <div class="flex flex-col leading-tight">
              <p class="text-sm font-semibold text-gray-800 m-0">{title}</p>
              <p class="text-xs text-gray-500 m-0">{description}</p>

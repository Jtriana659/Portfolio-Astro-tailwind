// Usaremos 'red-700' para el ícono y 'red-50' para el fondo del hover, y 'red-600' para el borde.
const PIN_COLOR = "text-red-700";
const HOVER_BG = "hover:bg-red-50";
const HOVER_BORDER = "hover:border-red-600";

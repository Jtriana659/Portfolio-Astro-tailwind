---
const text = "Jeisson Triana";
---

<style>
  @keyframes blurInUp {
    0% {
      opacity: 0;
      filter: blur(10px);
      transform: translateY(20px);
    }
    50% {
      opacity: 1;
      filter: blur(0);
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      filter: blur(10px);
      transform: translateY(-20px);
    }
  }

  .animate-blur-in-up {
    animation: blurInUp 4.2s ease-in-out infinite;
  }
</style>

<div class="flex space-x-1 text-2xl font-bold text-white">
  {
    text.split("").map((char, i) => (
      <span
        class="opacity-0 inline-block animate-blur-in-up"
        style={`animation-delay: ${i * 0.15}s`}
      >
        {char === " " ? "\u00A0" : char}
      </span>
    ))
  }
</div>
